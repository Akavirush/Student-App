<div class="container-w">
    <h1 class="headline">Регистрация</h1>
    <%= form_with model: @user, url: sign_up_path do |form| %>
            <% if @user.errors.any?%>
            <div class=”alert alert-danger”>
                <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
                <% end %>
            </div>
            <% end %>
            <div class="log-pass-inputs"">
                <%=form.text_field :login, class: "form-control form-control-lg", class: "log-input"%>
                <%=form.text_field :password, class: "form-control form-control-lg", class: "pass-input"%>
                <%=form.text_field :password_confirmation, class: "form-control form-control-lg", class: "r-pass-input"%>
            </div>
            <%= form.submit "Регистрация", class: "sign-button"%>
    <% end %>
</div>
